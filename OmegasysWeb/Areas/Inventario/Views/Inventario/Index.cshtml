@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="heading-secondary mb-0">Stock de Productos</h1>
            </div>
            <div class="col-md-6 text-md-end">
                <a class="btn btn-secondary" asp-action="NuevoInventario">
                    <i class="bi bi-plus-circle-fill me-2"></i>
                    Crear Nuevo Inventario
                </a>
                <a class="btn btn-secondary" asp-action="KardexProducto">
                    Kardex
                </a>
            </div>
        </div>
    </div>
</header>

<br />

<div class="container p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Bodega</th>
                <th>Producto</th>
                <th>Costo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/inventario.js"></script>
}